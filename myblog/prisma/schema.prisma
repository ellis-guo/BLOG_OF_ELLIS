generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(cuid())
  
  // Personal Bio (three languages)
  bioZh     String?  @db.Text
  bioEn     String?  @db.Text
  bioFr     String?  @db.Text
  
  // Contact info
  email     String?
  github    String?
  linkedin  String?
  twitter   String?
  wechat    String?
  
  // Main profile photo
  photoUrl  String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LifeMoment {
  id        String   @id @default(cuid())
  imageUrl  String
  caption   String?
  intro     String?  @db.Text
  order     Int      @default(0)
  time      DateTime @default(now())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Article {
  id         String   @id @default(cuid())
  type       String   @default("post")
  slug       String   @unique
  
  titleZh    String
  titleEn    String
  titleFr    String
  
  descriptionZh  String?  @db.Text
  descriptionEn  String?  @db.Text
  descriptionFr  String?  @db.Text
  
  contentZh  String   @db.Text
  contentEn  String   @db.Text
  contentFr  String   @db.Text
  
  author     String   @default("Ellis Guo (郭世越)")
  coverImage String?
  
  tags       String[] // Tech stack or categories
  
  visibility String   @default("public")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Homepage {
  id  String @id @default(cuid())
  
  // Slogan (short intro)
  sloganZh  String   @default("")
  sloganEn  String   @default("")
  sloganFr  String   @default("")
  
  // About Section (detailed intro)
  aboutZh  String   @db.Text
  aboutEn  String   @db.Text
  aboutFr  String   @db.Text
  
  // Featured content (Article IDs)
  featuredExperienceIds  String[]
  featuredProjectIds     String[]
  featuredPostIds        String[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id  String @id @default(cuid())
  
  // Title (three languages)
  titleZh       String
  titleEn       String
  titleFr       String
  
  // Organization/Company
  organization  String
  location      String?
  
  // Description (three languages)
  descriptionZh String   @db.Text
  descriptionEn String   @db.Text
  descriptionFr String   @db.Text
  
  // Tags (skills/technologies)
  tags          String[]
  
  // Time period
  startDate     DateTime
  endDate       DateTime?  // null means "Present"
  
  // Display order
  order         Int      @default(0)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}